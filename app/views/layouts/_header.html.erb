<header id="header">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<a class="logo" href="/"><img src="/assets/logo.gif" /></a>
				<ul class="navlist">					
					<% if signed_in? %>
						<li><a href="/users/<%= current_user.id %>"><%= current_user.username.capitalize %>'s Page</a></li>
						<li><%= link_to "Log out", signout_path, method: "delete", class: 'login' %></li>
					<% else %>
						<li><a href="/signin">Log In</a></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</header>